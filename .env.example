# Aurigraph DLT Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to Git!

# ========================================
# JIRA Configuration
# ========================================
JIRA_EMAIL=your-email@aurigraph.io
JIRA_API_TOKEN=your-jira-api-token-here
JIRA_BASE_URL=https://aurigraphdlt.atlassian.net
JIRA_PROJECT_KEY=AV11

# How to get JIRA API Token:
# 1. Go to https://id.atlassian.com/manage-profile/security/api-tokens
# 2. Click "Create API token"
# 3. Copy the token and paste above

# ========================================
# Remote Server Configuration
# ========================================
REMOTE_HOST=dlt.aurigraph.io
REMOTE_PORT=22
REMOTE_USER=subbu
REMOTE_PASSWORD=your-password-here

# Note: For better security, use SSH keys instead of passwords
# Run: ssh-copy-id -p 22 ${REMOTE_USER}@${REMOTE_HOST}

# ========================================
# IAM2 Server Configuration (Development Only)
# ========================================
IAM2_URL=https://iam2.aurigraph.io/
IAM2_ADMIN_USERNAME=Awdadmin
IAM2_ADMIN_PASSWORD=your-password-here

# WARNING: In production, use secure vault solutions:
# - HashiCorp Vault
# - AWS Secrets Manager
# - Azure Key Vault

# ========================================
# Database Configuration
# ========================================
DB_URL=jdbc:h2:mem:aurigraph_v11;DB_CLOSE_DELAY=-1;MODE=PostgreSQL
DB_USER=aurigraph
DB_PASSWORD=your-db-password-here

# ========================================
# LevelDB Security
# ========================================
LEVELDB_ENCRYPTION_MASTER_PASSWORD=your-leveldb-master-password-here
LEVELDB_ENCRYPTION_KEY_PATH=/var/lib/aurigraph/keys/leveldb-master.key

# ========================================
# HSM Configuration
# ========================================
HSM_PIN=your-hsm-pin-here

# ========================================
# Bridge Configuration
# ========================================
BRIDGE_ETH_KEY=your-ethereum-private-key-here
BRIDGE_SOL_KEY=your-solana-private-key-here
BRIDGE_LZ_KEY=your-layerzero-private-key-here
BRIDGE_LZ_RELAYER=your-layerzero-relayer-address-here
BRIDGE_LZ_ORACLE=your-layerzero-oracle-address-here
BRIDGE_SOL_PROGRAM=your-solana-program-address-here

# ========================================
# Performance Testing
# ========================================
TARGET_TPS=2000000
BENCHMARK_DURATION=60
PARALLEL_THREADS=256
WARMUP_DURATION=10

# ========================================
# API Endpoints
# ========================================
API_BASE_URL=http://localhost:9003
API_TIMEOUT=30000

# ========================================
# Build & Deploy
# ========================================
MAVEN_OPTS=-Xmx4g
BUILD_PROFILE=production
NATIVE_BUILD=false
SKIP_TESTS=false

# ========================================
# Monitoring & Alerts
# ========================================
SLACK_WEBHOOK_URL=
EMAIL_NOTIFICATIONS=false
ALERT_EMAIL=

# ========================================
# Feature Flags
# ========================================
ENABLE_AUTO_ROLLBACK=true
ENABLE_HEALTH_CHECKS=true
ENABLE_PERFORMANCE_MONITORING=true

# ========================================
# Docker Compose Configuration
# ========================================
# PostgreSQL
POSTGRES_PASSWORD=your-secure-postgres-password-here

# Redis
REDIS_PASSWORD=your-secure-redis-password-here

# Grafana
GRAFANA_PASSWORD=your-secure-grafana-password-here

# Aurigraph V11 Service
QUARKUS_DATASOURCE_PASSWORD=your-secure-database-password-here

# ========================================
# Security Best Practices
# ========================================
# 1. NEVER commit .env files - Add to .gitignore
# 2. Rotate API tokens regularly - Every 90 days
# 3. Use SSH keys instead of passwords when possible
# 4. Limit JIRA token permissions - Only what's needed
# 5. Use separate tokens for dev/staging/prod
# 6. Keep credentials encrypted - Use system keychain if available
