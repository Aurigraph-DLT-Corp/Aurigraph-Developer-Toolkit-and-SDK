# Production Aurigraph AV10-7 Full Node
# Optimized for high-throughput operations and AV10 feature integration
# Multi-stage build for security and performance

FROM node:18-alpine AS builder

ARG OPTIMIZATION_LEVEL=MAXIMUM
ARG TARGET_TPS=1000000

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install build dependencies
RUN npm ci --only=production --no-audit --no-fund && \
    npm cache clean --force

# Copy source code
COPY src/ ./src/

# Build with production optimizations
RUN npm run build:prod || npm run build

# Production stage
FROM node:18-alpine AS production

# Security: Create non-root user
RUN addgroup -g 1001 -S aurigraph && \
    adduser -S aurigraph -u 1001 -G aurigraph

# Install production dependencies and monitoring tools
RUN apk add --no-cache \
    dumb-init \
    curl \
    netcat-openbsd \
    openssl \
    ca-certificates \
    htop \
    iotop && \
    apk upgrade

WORKDIR /app

# Copy built application
COPY --from=builder --chown=aurigraph:aurigraph /app/dist ./dist
COPY --from=builder --chown=aurigraph:aurigraph /app/node_modules ./node_modules
COPY --from=builder --chown=aurigraph:aurigraph /app/package*.json ./

# Create directories
RUN mkdir -p data logs config metrics && \
    chown -R aurigraph:aurigraph /app

# Production environment
ENV NODE_ENV=production \
    NODE_OPTIONS="--max-old-space-size=4096 --enable-source-maps" \
    UV_THREADPOOL_SIZE=64 \
    OPTIMIZATION_LEVEL=${OPTIMIZATION_LEVEL} \
    TARGET_TPS=${TARGET_TPS} \
    ENABLE_METRICS=true

# Health check with metrics endpoint
HEALTHCHECK --interval=20s --timeout=5s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8200/health || exit 1

# Expose ports
EXPOSE 8200 30200 9200

# Switch to non-root user
USER aurigraph

# Start full node with AV10 features
ENTRYPOINT ["dumb-init", "--"]
CMD ["node", "--enable-source-maps", "--max-old-space-size=4096", "dist/core/AV10Node.js"]