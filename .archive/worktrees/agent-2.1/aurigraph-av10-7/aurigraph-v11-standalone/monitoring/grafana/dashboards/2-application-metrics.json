{
  "dashboard": {
    "title": "Aurigraph V11 - Application Metrics",
    "uid": "aurigraph-v11-application",
    "tags": ["aurigraph", "v11", "application", "performance"],
    "timezone": "browser",
    "schemaVersion": 38,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "Current TPS",
        "type": "stat",
        "gridPos": {"h": 5, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(aurigraph_transactions_processed_total[1m])",
            "legendFormat": "TPS",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "decimals": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1000000, "color": "yellow"},
                {"value": 2000000, "color": "green"},
                {"value": 3000000, "color": "blue"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "stat",
        "gridPos": {"h": 5, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_seconds_count[1m]))",
            "legendFormat": "Requests/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1000, "color": "yellow"},
                {"value": 5000, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "stat",
        "gridPos": {"h": 5, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(aurigraph_errors_total[1m])",
            "legendFormat": "Errors/sec",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Success Rate",
        "type": "gauge",
        "gridPos": {"h": 5, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_seconds_count{status=~\"2..\"}[5m])) / sum(rate(http_server_requests_seconds_count[5m]))",
            "legendFormat": "Success %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.95, "color": "yellow"},
                {"value": 0.99, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "TPS Over Time (1M-3M+ Target)",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 5},
        "targets": [
          {
            "expr": "rate(aurigraph_transactions_processed_total[1m])",
            "legendFormat": "Current TPS",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "custom": {
              "lineWidth": 3,
              "fillOpacity": 15
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "transparent"},
                {"value": 2000000, "color": "green"}
              ]
            }
          }
        },
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {"showLegend": true}
        }
      },
      {
        "id": 6,
        "title": "Response Time Distribution",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 15},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_server_requests_seconds_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_server_requests_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_server_requests_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 3,
            "custom": {
              "lineWidth": 2
            }
          }
        }
      },
      {
        "id": 7,
        "title": "HTTP Status Codes",
        "type": "piechart",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 15},
        "targets": [
          {
            "expr": "sum by(status) (rate(http_server_requests_seconds_count[5m]))",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          }
        }
      },
      {
        "id": 8,
        "title": "Active Requests",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 25},
        "targets": [
          {
            "expr": "http_server_requests_active_seconds_active",
            "legendFormat": "Active Requests",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 9,
        "title": "Database Query Performance",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 25},
        "targets": [
          {
            "expr": "rate(hikaricp_connections_acquire_seconds_sum[5m]) / rate(hikaricp_connections_acquire_seconds_count[5m])",
            "legendFormat": "Avg Connection Acquire Time",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 3
          }
        }
      },
      {
        "id": 10,
        "title": "Transaction Processing Latency",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 33},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(aurigraph_transaction_processing_seconds_bucket[5m]))",
            "legendFormat": "p50 Latency",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(aurigraph_transaction_processing_seconds_bucket[5m]))",
            "legendFormat": "p95 Latency",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(aurigraph_transaction_processing_seconds_bucket[5m]))",
            "legendFormat": "p99 Latency",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "custom": {
              "lineWidth": 2
            }
          }
        }
      }
    ]
  }
}
