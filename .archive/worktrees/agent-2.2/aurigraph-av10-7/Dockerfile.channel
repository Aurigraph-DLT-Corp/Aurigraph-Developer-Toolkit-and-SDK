FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
RUN npm ci --production

# Copy source code
COPY src/ ./src/
COPY tsconfig.json ./

# Install TypeScript globally for compilation
RUN npm install -g typescript ts-node

# Build the application
RUN npm run build

# Create channel user
RUN addgroup -g 1001 -S aurigraph && \
    adduser -S aurigraph -u 1001 -G aurigraph

# Set permissions
RUN chown -R aurigraph:aurigraph /app
USER aurigraph

# Expose channel manager port
EXPOSE 8090

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:8090/health || exit 1

CMD ["npx", "ts-node", "src/management/ChannelManager.ts"]