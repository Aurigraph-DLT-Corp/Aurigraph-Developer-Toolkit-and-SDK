# Production Aurigraph AV10-7 Management Dashboard
# High-availability management interface with load balancing support
# Optimized for production monitoring and control

FROM node:18-alpine AS builder

ARG OPTIMIZATION_LEVEL=MAXIMUM

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install dependencies
RUN npm ci --only=production --no-audit --no-fund && \
    npm cache clean --force

# Copy source code
COPY src/ ./src/

# Build management dashboard
RUN npm run build:prod || npm run build

# Production stage
FROM node:18-alpine AS production

# Security: Create non-root user
RUN addgroup -g 1001 -S aurigraph && \
    adduser -S aurigraph -u 1001 -G aurigraph

# Install production tools
RUN apk add --no-cache \
    dumb-init \
    curl \
    netcat-openbsd \
    openssl \
    ca-certificates \
    redis && \
    apk upgrade

WORKDIR /app

# Copy built application
COPY --from=builder --chown=aurigraph:aurigraph /app/dist ./dist
COPY --from=builder --chown=aurigraph:aurigraph /app/node_modules ./node_modules
COPY --from=builder --chown=aurigraph:aurigraph /app/package*.json ./

# Copy UI components if they exist
COPY --chown=aurigraph:aurigraph ui/ ./ui/ 2>/dev/null || true

# Create directories
RUN mkdir -p logs cache sessions && \
    chown -R aurigraph:aurigraph /app

# Production environment
ENV NODE_ENV=production \
    NODE_OPTIONS="--max-old-space-size=2048 --enable-source-maps" \
    OPTIMIZATION_LEVEL=${OPTIMIZATION_LEVEL} \
    SESSION_STORE=redis \
    CACHE_ENABLED=true

# Health check
HEALTHCHECK --interval=30s --timeout=5s --start-period=20s --retries=3 \
    CMD curl -f http://localhost:3240/health || exit 1

# Expose management port
EXPOSE 3240

# Switch to non-root user
USER aurigraph

# Start management dashboard
ENTRYPOINT ["dumb-init", "--"]
CMD ["node", "--enable-source-maps", "dist/management/ManagementAPI.js"]