# Aurigraph Enterprise Portal - Environment Configuration Template
# Copy this file to .env and configure for your environment

# =============================================================================
# API Configuration
# =============================================================================

# Backend API Base URL (Production)
# For local development, use: http://localhost:9003
VITE_API_URL=https://dlt.aurigraph.io

# API Request Timeout (milliseconds)
VITE_API_TIMEOUT=30000

# =============================================================================
# Dashboard Configuration
# =============================================================================

# Dashboard refresh interval (milliseconds)
VITE_REFRESH_INTERVAL=5000

# TPS performance target
VITE_TPS_TARGET=2000000

# =============================================================================
# Smart Contracts Registry
# =============================================================================

# Enable Smart Contracts integration
VITE_CONTRACTS_ENABLED=true

# Contract deployment timeout (milliseconds)
VITE_CONTRACT_DEPLOY_TIMEOUT=60000

# =============================================================================
# Feature Flags
# =============================================================================

# Enable HMS integration
VITE_HMS_ENABLED=true

# Enable AI optimization features
VITE_AI_FEATURES_ENABLED=true

# Enable performance monitoring
VITE_MONITORING_ENABLED=true

# =============================================================================
# Development Settings
# =============================================================================

# Enable debug logging (development only)
VITE_DEBUG=false

# Enable mock data fallback
VITE_MOCK_DATA_ENABLED=true

# =============================================================================
# Security
# =============================================================================

# Enable HTTPS enforcement
VITE_ENFORCE_HTTPS=true

# Session timeout (milliseconds)
VITE_SESSION_TIMEOUT=1800000
