# Simplified Aurigraph Basic Node - JVM mode for faster deployment
FROM openjdk:21-jdk-slim AS build

# Install Maven
RUN apt-get update && apt-get install -y maven curl && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /code

# Copy Maven configuration
COPY pom.xml .

# Download dependencies
RUN mvn dependency:go-offline -q

# Copy source code
COPY src src

# Build application
RUN mvn package -DskipTests=true -q

## Stage 2: Runtime stage
FROM openjdk:21-jre-slim

# Install curl for health checks
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Container metadata
LABEL name="aurigraph-basicnode" \
      version="10.19.0" \
      description="Aurigraph Basic Node - User-friendly Docker + Quarkus implementation"

# Performance settings
ENV JAVA_OPTS="-Xmx512m -XX:+UseG1GC -XX:+UseStringDeduplication" \
    QUARKUS_HTTP_HOST="0.0.0.0" \
    QUARKUS_HTTP_PORT="8080"

# Create non-root user
RUN groupadd -r aurigraph && useradd -r -g aurigraph -u 1001 aurigraph

# Set working directory
WORKDIR /work

# Copy JAR from build stage
COPY --from=build --chown=aurigraph:aurigraph /code/target/quarkus-app/ /work/

# Change to non-root user
USER 1001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8080/q/health || exit 1

# Expose port
EXPOSE 8080

# Start application
CMD ["java", "-jar", "quarkus-run.jar"]