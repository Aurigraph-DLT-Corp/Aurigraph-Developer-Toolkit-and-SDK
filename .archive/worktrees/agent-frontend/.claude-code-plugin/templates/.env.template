# Aurigraph DLT Claude Code Plugin Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to Git!

# ========================================
# JIRA Configuration
# ========================================
JIRA_EMAIL=your-email@aurigraph.io
JIRA_API_TOKEN=your-jira-api-token-here
JIRA_BASE_URL=https://aurigraphdlt.atlassian.net
JIRA_PROJECT_KEY=AV11

# How to get JIRA API Token:
# 1. Go to https://id.atlassian.com/manage-profile/security/api-tokens
# 2. Click "Create API token"
# 3. Copy the token and paste above

# ========================================
# Remote Server Configuration
# ========================================
REMOTE_HOST=dlt.aurigraph.io
REMOTE_PORT=22
REMOTE_USER=subbu
REMOTE_PASSWORD=your-password-here
REMOTE_DEPLOY_PATH=/opt/aurigraph-v11

# Note: For better security, use SSH keys instead of passwords
# Run: ssh-copy-id -p 22 subbu@dlt.aurigraph.io

# ========================================
# API Endpoints
# ========================================
API_BASE_URL=http://localhost:9003
API_TIMEOUT=30000

# ========================================
# Performance Testing
# ========================================
TARGET_TPS=2000000
BENCHMARK_DURATION=60
PARALLEL_THREADS=256
WARMUP_DURATION=10

# ========================================
# Database Configuration
# ========================================
DB_URL=jdbc:h2:./data/aurigraph
DB_USER=sa
DB_PASSWORD=

# ========================================
# Build & Deploy
# ========================================
MAVEN_OPTS=-Xmx4g
BUILD_PROFILE=production
NATIVE_BUILD=false
SKIP_TESTS=false

# ========================================
# Monitoring & Alerts
# ========================================
SLACK_WEBHOOK_URL=
EMAIL_NOTIFICATIONS=false
ALERT_EMAIL=

# ========================================
# Feature Flags
# ========================================
ENABLE_AUTO_ROLLBACK=true
ENABLE_HEALTH_CHECKS=true
ENABLE_PERFORMANCE_MONITORING=true

# ========================================
# JVM Configuration
# ========================================
JVM_MIN_HEAP=16g
JVM_MAX_HEAP=32g
GC_TYPE=G1GC
GC_MAX_PAUSE=20
