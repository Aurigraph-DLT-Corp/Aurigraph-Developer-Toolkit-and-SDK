#!/usr/bin/expect -f

# Check logs on remote server
set timeout 30
set password "subbuFuture@2025"

spawn ssh -p 22 subbu@dlt.aurigraph.io "cd ~/aurigraph-v11 && echo '=== Console Log ===' && tail -50 logs/console.log && echo '' && echo '=== Application Log ===' && tail -50 logs/aurigraph-v11.log 2>/dev/null || echo 'Application log not found'"

expect {
    "password:" {
        send "$password\r"
        exp_continue
    }
    "Are you sure you want to continue connecting" {
        send "yes\r"
        exp_continue
    }
    eof
}

wait
