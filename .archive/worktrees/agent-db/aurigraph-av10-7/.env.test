# Aurigraph AV10-7 Test Environment Configuration

NODE_ENV=test
LOG_LEVEL=error

# Test API endpoints
API_BASE_URL=http://localhost:3001
UI_BASE_URL=http://localhost:8080

# Test timeouts (milliseconds)
TEST_TIMEOUT=30000
PERFORMANCE_TEST_TIMEOUT=180000
INTEGRATION_TEST_TIMEOUT=60000

# Performance targets
TARGET_TPS=1000000
TARGET_LATENCY=500
MIN_SUCCESS_RATE=99.0

# Test database settings (if needed)
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=aurigraph_test

# Disable external services during testing
DISABLE_TELEMETRY=true
DISABLE_ANALYTICS=true

# Security testing
SNYK_SEVERITY_THRESHOLD=medium
AUDIT_LEVEL=moderate

# Coverage thresholds
COVERAGE_THRESHOLD_LINES=95
COVERAGE_THRESHOLD_FUNCTIONS=90
COVERAGE_THRESHOLD_BRANCHES=85
COVERAGE_THRESHOLD_STATEMENTS=95

# Test parallelization
MAX_WORKERS=50%
COVERAGE_WORKERS=2

# Reporting
REPORTS_DIR=./reports
ENABLE_HTML_REPORTS=true
ENABLE_JSON_REPORTS=true