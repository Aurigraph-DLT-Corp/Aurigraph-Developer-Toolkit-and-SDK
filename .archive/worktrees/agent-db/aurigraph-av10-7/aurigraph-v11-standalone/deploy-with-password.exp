#!/usr/bin/expect -f

# Expect script to automate deployment with password
# This handles password prompts for SSH/SCP commands

set timeout 300
set password "subbuFuture@2025"

# Run the deployment script and handle password prompts
spawn ./deploy-v11.sh

# Handle multiple password prompts
expect {
    "password:" {
        send "$password\r"
        exp_continue
    }
    "Are you sure you want to continue connecting" {
        send "yes\r"
        exp_continue
    }
    eof
}

wait
