{
  "dashboard": {
    "title": "VVB Approval System - Real-Time Monitoring",
    "tags": ["approval-system", "vvb", "production"],
    "timezone": "UTC",
    "panels": [
      {
        "title": "Approval Metrics Overview",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "increase(approval_requests_total[1h])",
            "legendFormat": "Created Last Hour",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "auto",
          "reduceOptions": {
            "values": false,
            "fields": "",
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "title": "Consensus Achievement Rate",
        "type": "gauge",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 0
        },
        "targets": [
          {
            "expr": "(increase(approvals_consensus_reached[1h]) / (increase(approval_requests_total[1h]) + 1)) * 100",
            "legendFormat": "Success Rate %",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "auto",
          "showThresholdLabels": false,
          "showThresholdMarkers": true,
          "reduceOptions": {
            "values": false,
            "fields": "",
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "max": 100,
            "min": 0,
            "unit": "percent",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 80
                },
                {
                  "color": "green",
                  "value": 95
                }
              ]
            }
          }
        }
      },
      {
        "title": "Average Time to Consensus",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.5, approval_consensus_time_seconds_bucket)",
            "legendFormat": "Median",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "auto",
          "reduceOptions": {
            "values": false,
            "fields": "",
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 5
                },
                {
                  "color": "red",
                  "value": 10
                }
              ]
            }
          }
        }
      },
      {
        "title": "Active Approvals",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "targets": [
          {
            "expr": "approvals_pending_total",
            "legendFormat": "Pending Approvals",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "auto",
          "reduceOptions": {
            "values": false,
            "fields": "",
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "title": "Approval Throughput (Requests/min)",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 4
        },
        "targets": [
          {
            "expr": "rate(approval_requests_total[1m])",
            "legendFormat": "Creation Rate",
            "refId": "A"
          },
          {
            "expr": "rate(approvals_executed[1m])",
            "legendFormat": "Execution Rate",
            "refId": "B"
          },
          {
            "expr": "rate(approvals_rejected[1m])",
            "legendFormat": "Rejection Rate",
            "refId": "C"
          }
        ],
        "options": {
          "legend": {
            "calcs": ["last", "mean", "max"],
            "displayMode": "table",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "multi"
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 0
            }
          }
        }
      },
      {
        "title": "Approval Status Distribution",
        "type": "piechart",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 12,
          "y": 4
        },
        "targets": [
          {
            "expr": "approvals_by_status",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "right"
          },
          "tooltip": {
            "mode": "single"
          }
        }
      },
      {
        "title": "Validator Voting Participation",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 10
        },
        "targets": [
          {
            "expr": "(rate(validator_votes_submitted[1h]) / (rate(approval_requests_total[1h]) * 3 + 1)) * 100",
            "legendFormat": "Participation Rate",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {
            "calcs": ["last", "mean"],
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "single"
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100,
            "min": 0,
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "title": "Validator Response Time (p50, p95, p99)",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 12,
          "y": 10
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.5, rate(validator_vote_submission_time_seconds_bucket[1m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(validator_vote_submission_time_seconds_bucket[1m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(validator_vote_submission_time_seconds_bucket[1m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "options": {
          "legend": {
            "calcs": ["last", "mean", "max"],
            "displayMode": "table",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "multi"
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 0
            }
          }
        }
      },
      {
        "title": "Webhook Delivery Success Rate",
        "type": "gauge",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 16
        },
        "targets": [
          {
            "expr": "(increase(webhook_deliveries_success[1h]) / (increase(webhook_deliveries_total[1h]) + 1)) * 100",
            "legendFormat": "Success %",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "auto",
          "showThresholdLabels": false,
          "showThresholdMarkers": true,
          "reduceOptions": {
            "values": false,
            "fields": "",
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "max": 100,
            "min": 0,
            "unit": "percent",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 95
                },
                {
                  "color": "green",
                  "value": 99
                }
              ]
            }
          }
        }
      },
      {
        "title": "Webhook Delivery Attempts",
        "type": "timeseries",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 16
        },
        "targets": [
          {
            "expr": "rate(webhook_delivery_attempts[1m])",
            "legendFormat": "Total Attempts",
            "refId": "A"
          },
          {
            "expr": "rate(webhook_delivery_retries[1m])",
            "legendFormat": "Retries",
            "refId": "B"
          }
        ],
        "options": {
          "legend": {
            "calcs": ["last", "sum"],
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "multi"
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "title": "Cache Performance",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 16
        },
        "targets": [
          {
            "expr": "(increase(cache_hits[1h]) / (increase(cache_hits[1h]) + increase(cache_misses[1h]) + 1)) * 100",
            "legendFormat": "Hit Rate",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "auto",
          "reduceOptions": {
            "values": false,
            "fields": "",
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 75
                },
                {
                  "color": "green",
                  "value": 85
                }
              ]
            }
          }
        }
      },
      {
        "title": "Consensus Threshold Effectiveness",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 16
        },
        "targets": [
          {
            "expr": "increase(approvals_above_threshold[1h])",
            "legendFormat": "Above Threshold",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "auto",
          "reduceOptions": {
            "values": false,
            "fields": "",
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "title": "System Health Checks",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 20
        },
        "targets": [
          {
            "expr": "up{job='aurigraph-v11-api'}",
            "legendFormat": "API Server",
            "refId": "A"
          },
          {
            "expr": "up{job='postgres-staging'}",
            "legendFormat": "Database",
            "refId": "B"
          },
          {
            "expr": "up{job='redis-staging'}",
            "legendFormat": "Cache",
            "refId": "C"
          },
          {
            "expr": "up{job='webhook-processor'}",
            "legendFormat": "Webhook Processor",
            "refId": "D"
          }
        ],
        "options": {
          "legend": {
            "calcs": ["last"],
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "multi"
          }
        },
        "fieldConfig": {
          "defaults": {
            "max": 1,
            "min": 0,
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 20
            }
          }
        }
      },
      {
        "title": "Approval Processing Latency (p50, p95, p99)",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 12,
          "y": 20
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.5, rate(approval_processing_time_seconds_bucket[1m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(approval_processing_time_seconds_bucket[1m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(approval_processing_time_seconds_bucket[1m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "options": {
          "legend": {
            "calcs": ["last", "mean", "max"],
            "displayMode": "table",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "multi"
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 0
            }
          }
        }
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "uid": "vvb-approval-system",
    "version": 1
  }
}
