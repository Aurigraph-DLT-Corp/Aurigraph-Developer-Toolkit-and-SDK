{
  "dashboard": {
    "title": "Webhook & System Health Monitoring",
    "tags": ["webhooks", "system-health", "infrastructure"],
    "timezone": "UTC",
    "panels": [
      {
        "title": "Webhook Processor Status",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 4,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "up{job='webhook-processor'}",
            "legendFormat": "Status",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "orientation": "auto",
          "textMode": "auto",
          "reduceOptions": {
            "values": false,
            "fields": "",
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "thresholds"
            },
            "mappings": [
              {
                "type": "value",
                "options": {
                  "1": {
                    "text": "UP",
                    "color": "green"
                  },
                  "0": {
                    "text": "DOWN",
                    "color": "red"
                  }
                }
              }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        }
      },
