      {
        "title": "Webhook Events Per Minute",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 4
        },
        "targets": [
          {
            "expr": "rate(webhook_events_published[1m])",
            "legendFormat": "Published",
            "refId": "A"
          },
          {
            "expr": "rate(webhook_deliveries_total[1m])",
            "legendFormat": "Delivered",
            "refId": "B"
          },
          {
            "expr": "rate(webhook_deliveries_failed[1m])",
            "legendFormat": "Failed",
            "refId": "C"
          }
        ],
        "options": {
          "legend": {
            "calcs": ["last", "mean", "max"],
            "displayMode": "table",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "multi"
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "title": "Webhook Retry Pattern",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 12,
          "y": 4
        },
        "targets": [
          {
            "expr": "increase(webhook_delivery_attempts[1m])",
            "legendFormat": "Attempts",
            "refId": "A"
          },
          {
            "expr": "increase(webhook_delivery_retries[1m])",
            "legendFormat": "Retries",
            "refId": "B"
          },
          {
            "expr": "increase(webhook_delivery_backoff_ms[1m])",
            "legendFormat": "Backoff (ms)",
            "refId": "C"
          }
        ],
        "options": {
          "legend": {
            "calcs": ["last", "sum"],
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "multi"
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "title": "Webhook Queue Depth",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 10
        },
        "targets": [
          {
            "expr": "webhook_queue_depth",
            "legendFormat": "Queue Events",
            "refId": "A"
          },
          {
            "expr": "webhook_queue_capacity",
            "legendFormat": "Queue Capacity",
            "refId": "B"
          }
        ],
        "options": {
          "legend": {
            "calcs": ["last", "max", "mean"],
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "multi"
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 20
            }
          }
        }
      },
      {
        "title": "HTTP Request Rate",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 12,
          "y": 10
        },
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~'2..'}[1m])",
            "legendFormat": "2xx Success",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total{status=~'4..'}[1m])",
            "legendFormat": "4xx Client Error",
            "refId": "B"
          },
          {
            "expr": "rate(http_requests_total{status=~'5..'}[1m])",
            "legendFormat": "5xx Server Error",
            "refId": "C"
          }
        ],
        "options": {
          "legend": {
            "calcs": ["last", "sum"],
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "multi"
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        }
      },
