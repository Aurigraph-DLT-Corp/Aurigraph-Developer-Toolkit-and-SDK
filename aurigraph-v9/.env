# Development Environment Configuration
NODE_ENV=development
NODE_TYPE=validator
NODE_ID=validator-dev-1
NODE_NAME=aurigraph-validator-dev-1
NODE_PORT=8080

# Network Configuration
NETWORK_ID=aurigraph-devnet
NETWORK_PORT=30303
P2P_PORT=30304
CONSENSUS_PORT=30305

# Database Configuration (using local instances)
MONGODB_URI=mongodb://localhost:27017/aurigraph_dev
REDIS_URL=redis://localhost:6379

# Security Configuration
NTRU_SECURITY_LEVEL=256
PKI_ENABLED=false

# API Configuration
API_PORT=3000
API_PREFIX=/api/v9
GRAPHQL_ENABLED=false
GRPC_ENABLED=false

# Performance Configuration
MAX_TPS=100000
SHARD_COUNT=4
BATCH_SIZE=1000
PIPELINE_DEPTH=2
VALIDATORS=validator-dev-1,validator-dev-2,validator-dev-3

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
LOG_LEVEL=info