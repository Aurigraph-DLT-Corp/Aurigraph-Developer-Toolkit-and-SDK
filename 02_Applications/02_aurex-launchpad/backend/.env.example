# ================================================================================
# AUREX LAUNCHPAD™ ENVIRONMENT CONFIGURATION
# Example environment variables for development and production
# Copy to .env and update with your actual values
# ================================================================================

# Application Configuration
APP_NAME=Aurex Launchpad™
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# API Configuration
API_V1_STR=/api/v1

# Server Configuration
HOST=0.0.0.0
PORT=8001

# Database Configuration
# Development (default)
DATABASE_URL=postgresql://postgres:postgres_dev_password@localhost:5432/aurex_launchpad
# Production example:
# DATABASE_URL=postgresql://aurex_user:secure_password@localhost:5432/aurex_launchpad_prod

DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security Configuration
# IMPORTANT: Generate secure random values for production!
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-minimum-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,https://dev.aurigraph.io

# File Upload Configuration
MAX_UPLOAD_SIZE=52428800
UPLOAD_DIR=./temp/uploads
ALLOWED_EXTENSIONS=pdf,xlsx,xls,docx,doc,csv,txt,png,jpg,jpeg,tiff

# OpenAI Configuration (for AI-powered document intelligence)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# Email Configuration (SMTP)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@aurigraph.io
EMAILS_FROM_NAME=Aurex Launchpad

# Celery Configuration (Background Tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Security Settings
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGITS=true
PASSWORD_REQUIRE_SPECIAL=true
FAILED_LOGIN_ATTEMPTS_LIMIT=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn-here

# Development Tools
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
ENABLE_FLOWER=true

# Production SSL Configuration (for HTTPS)
# SSL_ENABLED=true
# SSL_CERT_PATH=/etc/ssl/certs/aurex.crt
# SSL_KEY_PATH=/etc/ssl/private/aurex.key

# Trusted Hosts (for production)
# TRUSTED_HOSTS=dev.aurigraph.io,*.aurigraph.io

# ================================================================================
# PRODUCTION ENVIRONMENT EXAMPLE
# ================================================================================

# For production deployment, create a .env file with these values:

# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=warning

# DATABASE_URL=postgresql://aurex_prod:very_secure_password@localhost:5432/aurex_launchpad_prod
# REDIS_URL=redis://localhost:6379/1

# SECRET_KEY=generate-a-very-secure-random-key-at-least-32-characters-long
# JWT_SECRET_KEY=generate-another-very-secure-random-key-for-jwt-tokens

