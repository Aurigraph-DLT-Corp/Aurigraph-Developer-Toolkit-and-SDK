# ================================================================================
# AUREX LAUNCHPADâ„¢ ENVIRONMENT CONFIGURATION
# Copy this file to .env and configure your environment
# ================================================================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres_dev_password@localhost:5432/aurex_launchpad
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=your_super_secret_key_change_in_production_min_32_chars
JWT_SECRET_KEY=your_jwt_secret_key_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_V1_STR=/api/v1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# Email Configuration (SMTP)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAILS_FROM_EMAIL=noreply@aurigraph.io
EMAILS_FROM_NAME=Aurex Launchpad

# File Storage Configuration
UPLOAD_DIR=./temp/uploads
MAX_FILE_SIZE=52428800  # 50MB
ALLOWED_EXTENSIONS=pdf,xlsx,xls,docx,doc,csv,txt,png,jpg,jpeg,tiff

# Celery Configuration (Background Tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security Settings
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGITS=true
PASSWORD_REQUIRE_SPECIAL=true
FAILED_LOGIN_ATTEMPTS_LIMIT=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Monitoring and Logging
SENTRY_DSN=your_sentry_dsn_here
LOG_FORMAT=json
LOG_FILE=./logs/aurex_launchpad.log
LOG_ROTATION=1d
LOG_RETENTION=30d

# Development Tools
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
ENABLE_FLOWER=true

# Production Overrides (uncomment for production)
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=warning
# CORS_ORIGINS=https://yourdomain.com
# DATABASE_URL=postgresql://user:password@prod-db:5432/aurex_launchpad_prod
# SECRET_KEY=your_production_secret_key_very_long_and_secure
# JWT_SECRET_KEY=your_production_jwt_secret_key_very_long_and_secure