  "metrics": {
    "categories": [
      {
        "category": "Quantitative",
        "description": "Numerical data that can be measured and compared",
        "examples": ["GHG emissions (metric tons CO2-e)", "Energy consumption (gigajoules)", "Water usage (cubic meters)"]
      },
      {
        "category": "Qualitative", 
        "description": "Descriptive information about policies, processes, and practices",
        "examples": ["Description of policies", "Process descriptions", "Governance structures"]
      },
      {
        "category": "Discussion and Analysis",
        "description": "Management discussion of trends, risks, and opportunities",
        "examples": ["Risk management processes", "Strategic planning integration", "Forward-looking statements"]
      }
    ]
  },
  "materiality": {
    "approach": "Financially material sustainability factors",
    "definition": "Issues that are reasonably likely to impact the financial condition or operating performance of a company",
    "evidenceBasis": [
      "Market evidence of investor interest",
      "Legal and regulatory drivers", 
      "Industry and peer analysis",
      "Innovation and technology trends",
      "Stakeholder concerns and social trends"
    ]
  },
  "validation": {
    "industry_alignment_required": true,
    "topic_coverage_threshold": 80,
    "quantitative_metrics_minimum": 60,
    "quality_checks": [
      "industry_specific_relevance",
      "financial_materiality_evidence",
      "metric_completeness",
      "disclosure_quality"
    ]
  },
  "scoring": {
    "methodology": "Industry-specific weighted scoring",
    "components": {
      "topic_coverage": 35,
      "metric_quality": 30,
      "quantitative_disclosure": 25,
      "forward_looking_analysis": 10
    },
    "maxScore": 100,
    "passingScore": 75
  },
  "integration": {
