<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aurex Launchpad‚Ñ¢</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-br from-purple-50 to-indigo-100 min-h-screen">
    <div class="container mx-auto px-4 py-20 text-center">
        <div class="text-8xl mb-6">üöÄ</div>
        <h1 class="text-5xl font-bold text-purple-900 mb-4">Aurex Launchpad‚Ñ¢</h1>
        <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
            ESG Assessment & Sustainability Management Platform
        </p>

        <!-- Status Card -->
        <div class="bg-white rounded-lg shadow-xl p-8 max-w-md mx-auto mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">‚úÖ Application Status</h2>
            <div class="space-y-3">
                <div class="flex justify-between">
                    <span class="text-gray-600">Status:</span>
                    <span class="text-green-600 font-semibold" id="status">‚è≥ Loading...</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-600">Frontend Port:</span>
                    <span class="text-blue-600 font-semibold">3001</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-600">Backend Port:</span>
                    <span class="text-blue-600 font-semibold">8001</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-600">Version:</span>
                    <span class="text-blue-600 font-semibold" id="version">2.1.0</span>
                </div>
            </div>
        </div>

        <!-- Feature Cards -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-4xl mx-auto mb-8">
            <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow cursor-pointer" onclick="loadAssessments()">
                <div class="w-12 h-12 text-purple-600 mx-auto mb-4">üìä</div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">ESG Assessments</h3>
                <p class="text-gray-600">Comprehensive environmental, social, and governance evaluations</p>
            </div>

            <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow cursor-pointer" onclick="loadEmissions()">
                <div class="w-12 h-12 text-green-600 mx-auto mb-4">üå±</div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">GHG Emissions</h3>
                <p class="text-gray-600">Track and manage greenhouse gas emissions across all scopes</p>
            </div>

            <div class="bg-white rounded-lg shadow-lg p-6">
                <div class="w-12 h-12 text-blue-600 mx-auto mb-4">üë•</div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">Consultations</h3>
                <p class="text-gray-600">Expert guidance for your sustainability journey</p>
            </div>
        </div>

        <!-- Data Display Area -->
        <div id="dataDisplay" class="hidden bg-white rounded-lg shadow-xl p-8 max-w-4xl mx-auto mb-8">
            <div class="flex justify-between items-center mb-6">
                <h3 id="dataTitle" class="text-2xl font-bold text-gray-900"></h3>
                <button onclick="hideData()" class="text-gray-500 hover:text-gray-700">‚úï</button>
            </div>
            <div id="dataContent" class="text-left"></div>
        </div>

        <!-- API Links -->
        <div class="space-y-4">
            <h3 class="text-2xl font-bold text-gray-900">API Documentation</h3>
            <div class="flex justify-center space-x-4">
                <a href="/docs" target="_blank" class="bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700 transition-colors">
                    Backend API Docs
                </a>
                <a href="/health" target="_blank" class="bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition-colors">
                    Health Check
                </a>
            </div>
        </div>
    </div>

    <script>
        // Check health status on load
        async function checkHealth() {
            try {
                const response = await fetch('/health');
                const data = await response.json();
                document.getElementById('status').textContent = '‚úÖ Running';
                document.getElementById('version').textContent = data.version || '2.1.0';
            } catch (error) {
                document.getElementById('status').textContent = '‚ùå Offline';
                console.error('Health check failed:', error);
            }
        }

        // Load assessments data
        async function loadAssessments() {
            try {
                const response = await fetch('/api/v1/assessments/');
                const data = await response.json();

                document.getElementById('dataTitle').textContent = 'ESG Assessments';
                document.getElementById('dataContent').innerHTML = \`
                    <div class="grid gap-4">
                        \${data.assessments.map(assessment => \`
                            <div class="border rounded-lg p-4">
                                <h4 class="font-bold text-lg">\${assessment.assessment_type}</h4>
                                <p class="text-gray-600">Organization ID: \${assessment.organization_id}</p>
                                <p class="text-gray-600">Status: <span class="font-semibold">\${assessment.status}</span></p>
                                \${assessment.total_score ? \`
                                    <div class="grid grid-cols-4 gap-2 mt-2">
                                        <div class="text-center">
                                            <p class="text-sm text-gray-500">Environmental</p>
                                            <p class="text-lg font-bold text-green-600">\${assessment.environmental_score}</p>
                                        </div>
                                        <div class="text-center">
                                            <p class="text-sm text-gray-500">Social</p>
                                            <p class="text-lg font-bold text-blue-600">\${assessment.social_score}</p>
                                        </div>
                                        <div class="text-center">
                                            <p class="text-sm text-gray-500">Governance</p>
                                            <p class="text-lg font-bold text-purple-600">\${assessment.governance_score}</p>
                                        </div>
                                        <div class="text-center">
                                            <p class="text-sm text-gray-500">Total</p>
                                            <p class="text-lg font-bold text-gray-900">\${assessment.total_score}</p>
                                        </div>
                                    </div>
                                \` : ''}
                            </div>
                        \`).join('')}
                    </div>
                \`;
                document.getElementById('dataDisplay').classList.remove('hidden');
            } catch (error) {
                alert('Failed to load assessments: ' + error.message);
            }
        }

        // Load emissions data
        async function loadEmissions() {
            try {
                const response = await fetch('/api/v1/emissions/');
                const data = await response.json();

                document.getElementById('dataTitle').textContent = 'GHG Emissions';
                document.getElementById('dataContent').innerHTML = \`
                    <div class="grid gap-4">
                        \${data.emissions.map(emission => \`
                            <div class="border rounded-lg p-4">
                                <h4 class="font-bold text-lg">\${emission.reporting_year} Emissions Report</h4>
                                <p class="text-gray-600">Organization ID: \${emission.organization_id}</p>
                                <p class="text-gray-600">Status: <span class="font-semibold">\${emission.verification_status}</span></p>
                                <div class="grid grid-cols-4 gap-2 mt-4">
                                    <div class="text-center p-2 bg-red-50 rounded">
                                        <p class="text-sm text-gray-500">Scope 1</p>
                                        <p class="text-lg font-bold text-red-600">\${emission.scope1_emissions}</p>
                                        <p class="text-xs text-gray-500">tCO‚ÇÇe</p>
                                    </div>
                                    <div class="text-center p-2 bg-orange-50 rounded">
                                        <p class="text-sm text-gray-500">Scope 2</p>
                                        <p class="text-lg font-bold text-orange-600">\${emission.scope2_emissions}</p>
                                        <p class="text-xs text-gray-500">tCO‚ÇÇe</p>
                                    </div>
                                    <div class="text-center p-2 bg-yellow-50 rounded">
                                        <p class="text-sm text-gray-500">Scope 3</p>
                                        <p class="text-lg font-bold text-yellow-600">\${emission.scope3_emissions}</p>
                                        <p class="text-xs text-gray-500">tCO‚ÇÇe</p>
                                    </div>
                                    <div class="text-center p-2 bg-gray-50 rounded">
                                        <p class="text-sm text-gray-500">Total</p>
                                        <p class="text-lg font-bold text-gray-900">\${emission.total_emissions}</p>
                                        <p class="text-xs text-gray-500">tCO‚ÇÇe</p>
                                    </div>
                                </div>
                            </div>
                        \`).join('')}
                    </div>
                \`;
                document.getElementById('dataDisplay').classList.remove('hidden');
            } catch (error) {
                alert('Failed to load emissions: ' + error.message);
            }
        }

        // Hide data display
        function hideData() {
            document.getElementById('dataDisplay').classList.add('hidden');
        }

        // Check health on page load
        checkHealth();
    </script>
</body>
</html>
