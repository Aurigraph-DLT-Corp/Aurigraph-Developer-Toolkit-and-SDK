# Aurigraph V4.4.4 Production Environment Variables
# Remote Server: dlt.aurigraph.io
# Last Updated: 2025-11-14

# =========================================================================
# Domain & SSL Configuration
# =========================================================================
DOMAIN=dlt.aurigraph.io
TLS_ENABLED=true
SSL_CERT_PATH=/etc/letsencrypt/live/aurcrt/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/aurcrt/privkey.pem

# =========================================================================
# Database Configuration
# =========================================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=aurigraph_production
DB_USER=aurigraph
DB_PASSWORD=aurigraph-prod-secure-2025
DB_POOL_SIZE=20
DB_IDLE_TIMEOUT=300

# =========================================================================
# Redis Cache Configuration
# =========================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis-secure-2025
REDIS_DATABASE=0
REDIS_MAX_MEMORY=512mb

# =========================================================================
# Quarkus V11 Configuration
# =========================================================================
QUARKUS_PROFILE=production
QUARKUS_HTTP_PORT=9003
QUARKUS_HTTP_HTTP2=true
QUARKUS_LOG_LEVEL=INFO
QUARKUS_LOG_CONSOLE_ENABLED=true

# =========================================================================
# Aurigraph Node Configuration
# =========================================================================
AURIGRAPH_NODE_ID=v11-standalone-1
AURIGRAPH_MODE=production
AURIGRAPH_ENVIRONMENT=production

# =========================================================================
# Bridge Service Configuration (Sprint 15)
# =========================================================================
BRIDGE_SERVICE_ENABLED=true
BRIDGE_TRANSFER_FEE_PERCENTAGE=0.12
BRIDGE_SWAP_TIMEOUT_MS=300000
BRIDGE_HTLC_ENABLED=true
BRIDGE_SECRET_GENERATION_ENABLED=true
BRIDGE_HASH_ALGORITHMS=SHA256,SHA3

# =========================================================================
# Consensus Configuration (HyperRAFT++)
# =========================================================================
CONSENSUS_TARGET_TPS=776000
CONSENSUS_LEADER_ELECTION=true
CONSENSUS_HEARTBEAT_INTERVAL=50
CONSENSUS_ELECTION_TIMEOUT_MIN=150
CONSENSUS_ELECTION_TIMEOUT_MAX=300

# =========================================================================
# Performance Configuration
# =========================================================================
AI_OPTIMIZATION_ENABLED=true
AI_OPTIMIZATION_TARGET_TPS=2000000
QUANTUM_CRYPTO_ENABLED=true
NATIVE_MODE=true
PERFORMANCE_MODE=production

# =========================================================================
# Memory Optimization
# =========================================================================
MALLOC_ARENA_MAX=2
MALLOC_MMAP_THRESHOLD_=65536

# =========================================================================
# Monitoring Configuration
# =========================================================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_ENABLED=true
HEALTH_CHECKS_ENABLED=true

# =========================================================================
# Grafana Configuration
# =========================================================================
GRAFANA_PASSWORD=admin123
GRAFANA_ADMIN_USER=admin
GRAFANA_DOMAIN=dlt.aurigraph.io

# =========================================================================
# Portal Configuration
# =========================================================================
REACT_APP_API_BASE_URL=https://dlt.aurigraph.io/api/v11
REACT_APP_DOMAIN=dlt.aurigraph.io
NODE_ENV=production
GENERATE_SOURCEMAP=false

# =========================================================================
# Security Configuration
# =========================================================================
JWT_ENABLED=true
CORS_ENABLED=true
CORS_ORIGINS=https://dlt.aurigraph.io
RATE_LIMITING_ENABLED=true
RATE_LIMIT_REQUESTS_PER_SECOND=1000

# =========================================================================
# Logging Configuration
# =========================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_OUTPUT=file
LOG_FILE_PATH=/deployments/logs/aurigraph.log
LOG_RETENTION_DAYS=30

# =========================================================================
# Service Timeouts
# =========================================================================
HTTP_REQUEST_TIMEOUT=60000
GRPC_REQUEST_TIMEOUT=30000
DATABASE_QUERY_TIMEOUT=30000
CACHE_TTL_SECONDS=3600
