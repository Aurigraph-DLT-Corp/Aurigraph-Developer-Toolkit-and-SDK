# Aurigraph Enterprise Portal - Environment Configuration Template
# Copy this file to .env and configure for your environment

# =============================================================================
# API Configuration
# =============================================================================

# Backend API Base URL
REACT_APP_API_URL=https://dlt.aurigraph.io

# API Request Timeout (milliseconds)
REACT_APP_API_TIMEOUT=30000

# =============================================================================
# Dashboard Configuration
# =============================================================================

# Dashboard refresh interval (milliseconds)
REACT_APP_REFRESH_INTERVAL=5000

# TPS performance target
REACT_APP_TPS_TARGET=2000000

# =============================================================================
# Smart Contracts Registry
# =============================================================================

# Enable Smart Contracts integration
REACT_APP_CONTRACTS_ENABLED=true

# Contract deployment timeout (milliseconds)
REACT_APP_CONTRACT_DEPLOY_TIMEOUT=60000

# =============================================================================
# Feature Flags
# =============================================================================

# Enable HMS integration
REACT_APP_HMS_ENABLED=true

# Enable AI optimization features
REACT_APP_AI_FEATURES_ENABLED=true

# Enable performance monitoring
REACT_APP_MONITORING_ENABLED=true

# =============================================================================
# Development Settings
# =============================================================================

# Enable debug logging (development only)
REACT_APP_DEBUG=false

# Enable mock data fallback
REACT_APP_MOCK_DATA_ENABLED=true

# =============================================================================
# Security
# =============================================================================

# Enable HTTPS enforcement
REACT_APP_ENFORCE_HTTPS=true

# Session timeout (milliseconds)
REACT_APP_SESSION_TIMEOUT=1800000
