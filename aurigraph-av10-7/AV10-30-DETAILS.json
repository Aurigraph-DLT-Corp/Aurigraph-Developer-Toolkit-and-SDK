            "level": 3
          },
          "content": [
            {
              "type": "text",
              "text": "Quarkus Implementation"
            }
          ]
        },
        {
          "type": "codeBlock",
          "attrs": {
            "language": "java"
          },
          "content": [
            {
              "type": "text",
              "text": "@ApplicationScoped\npublic class PostQuantumCryptoService {\n    \n    @Inject\n    NTRUEngine ntruEngine;\n    \n    @Inject\n    KeyManagementService keyManager;\n    \n    public CompletionStage<EncryptedData> encryptData(\n        byte[] data, \n        String recipientId) {\n        \n        return keyManager.getPublicKey(recipientId)\n            .thenCompose(publicKey -> \n                ntruEngine.encrypt(data, publicKey))\n            .thenApply(this::wrapEncryptedData);\n    }\n    \n    public CompletionStage<byte[]> decryptData(\n        EncryptedData encryptedData, \n        String privateKeyId) {\n        \n        return keyManager.getPrivateKey(privateKeyId)\n            .thenCompose(privateKey -> \n                ntruEngine.decrypt(encryptedData, privateKey));\n    }\n}"
            }
          ]
        },
