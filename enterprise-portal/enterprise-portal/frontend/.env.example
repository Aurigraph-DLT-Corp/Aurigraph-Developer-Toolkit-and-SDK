# ============================================================================
# Aurigraph V12 Frontend Environment Configuration
# ============================================================================

# API Configuration
VITE_API_BASE_URL=/api/v11
VITE_API_URL=https://dlt.aurigraph.io/api/v11

# WebSocket Configuration
VITE_WS_URL=wss://localhost:9004

# Development Settings
VITE_SUPPRESS_ERRORS=false
VITE_DEBUG_MODE=false
VITE_ENABLE_MOCK_DATA=true

# Demo Mode
VITE_DEMO_MODE=true
VITE_MOCK_WEBSOCKET=true

# Logging
VITE_LOG_LEVEL=info

# ============================================================================
# V12 Feature Flags - Environment Overrides
# ============================================================================
# Override default feature flags (see FEATURE_FLAGS_GUIDE.md)
# Format: VITE_FEATURE_<FEATURE_NAME>=true|false

# Validator & Staking (Planned V12.1 - Default: Disabled)
# Uncomment when backend APIs are available
# VITE_FEATURE_VALIDATOR_DASHBOARD=true
# VITE_FEATURE_STAKING_OPERATIONS=true

# AI Optimization (Planned V12.2 - Default: Disabled)
# VITE_FEATURE_AI_OPTIMIZATION=true
# VITE_FEATURE_ML_MODELS=true
# VITE_FEATURE_PREDICTIVE_ANALYTICS=true

# Security Features (Planned V12.3 - Default: Disabled)
# VITE_FEATURE_QUANTUM_SECURITY=true
# VITE_FEATURE_KEY_ROTATION=true
# VITE_FEATURE_SECURITY_AUDITS=true
# VITE_FEATURE_VULNERABILITY_SCANNING=true

# Cross-Chain Features (Planned V12.4 - Default: Disabled)
# VITE_FEATURE_CROSS_CHAIN_BRIDGE=true
# VITE_FEATURE_BRIDGE_TRANSFERS=true

# Real-time Features (Planned V12.5 - Default: Disabled)
# VITE_FEATURE_REALTIME_UPDATES=true
# VITE_FEATURE_WEBSOCKET_CONNECTION=true

# ============================================================================
# Feature-Specific Configuration
# ============================================================================

# Validator & Staking
# VITE_VALIDATOR_REGISTRY_ENABLED=true
# VITE_STAKING_ENABLED=true

# AI & ML
# VITE_AI_ENABLED=false
# VITE_ML_MODELS_ENABLED=false
# VITE_PREDICTIVE_ANALYTICS_ENABLED=false
# VITE_ML_MODEL_ENDPOINT=https://ml.aurigraph.io

# Security
# VITE_QUANTUM_SECURITY_ENABLED=false
# VITE_KEY_ROTATION_ENABLED=false
# VITE_SECURITY_AUDITS_ENABLED=false
# VITE_VULNERABILITY_SCANNING_ENABLED=false

# Cross-Chain
# VITE_CROSS_CHAIN_ENABLED=false
# VITE_BRIDGE_TRANSFERS_ENABLED=false

# Real-time
# VITE_REALTIME_ENABLED=false

# Legacy Feature Flags
VITE_ENABLE_WEBSOCKET=false
VITE_ENABLE_E2E_TESTING=false

# External API Keys (Optional - falls back to mock data if not provided)
# =============================================================================

# OpenWeatherMap API
# Get your API key from: https://openweathermap.org/api
# Free tier: 60 calls/minute, 1,000,000 calls/month
VITE_WEATHER_API_KEY=

# Alpaca Markets API (Stock Market Data)
# Get your API key from: https://alpaca.markets/
# Free tier available for market data
VITE_ALPACA_API_KEY=
VITE_ALPACA_API_SECRET=

# NewsAPI
# Get your API key from: https://newsapi.org/
# Free tier: 100 requests/day, delayed by 24 hours
VITE_NEWSAPI_KEY=

# Twitter/X API v2
# Get your bearer token from: https://developer.twitter.com/
# Requires Twitter Developer account
VITE_TWITTER_BEARER_TOKEN=

# CoinGecko API (Cryptocurrency Data)
# Get your API key from: https://www.coingecko.com/en/api
# Free tier available (no API key required, but limited rate)
# Demo API key for higher rate limits
VITE_COINGECKO_API_KEY=
